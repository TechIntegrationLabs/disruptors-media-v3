{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run dev:full",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "REACT_APP_RAILWAY": "true",
        "REACT_APP_CLAUDE_BRIDGE_URL": "wss://${{RAILWAY_PUBLIC_DOMAIN}}",
        "CLAUDE_BRIDGE_PORT": "3456",
        "MCP_CONFIG_PATH": "./mcp-servers.json"
      }
    }
  },
  "services": [
    {
      "name": "frontend",
      "source": {
        "repo": "TechIntegrationLabs/disruptors-media-v3",
        "branch": "main"
      },
      "build": {
        "buildCommand": "npm run build"
      },
      "deploy": {
        "startCommand": "npm start"
      },
      "domains": [
        {
          "host": "disruptorsmedia.com"
        }
      ]
    },
    {
      "name": "claude-bridge",
      "source": {
        "repo": "TechIntegrationLabs/disruptors-media-v3",
        "branch": "main"
      },
      "build": {
        "buildCommand": "npm install"
      },
      "deploy": {
        "startCommand": "npm run claude-bridge"
      },
      "variables": {
        "NODE_ENV": "production",
        "CLAUDE_BRIDGE_PORT": "3456",
        "MCP_CONFIG_PATH": "./mcp-servers.json"
      }
    }
  ]
}